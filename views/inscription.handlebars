<h2>{{titre}}</h2>

<form id="form-auth" novalidate>
    <div class="form-group center">

        {{!-- label pour le nom --}}
        <div>
            <label for="nom">
                <p>Nom:</p>
                <input type="text" id="input-nom" required placeholder="Ex: Dubois">
                <span class="validity"></span>
                <div id="error-nom" class="error"></div>
            </label>
        </div>

        {{!-- Label pour le prenom --}}
        <div>
            <label for="prenom">
                <p>Prenom:</p>
                <input type="text" id="input-prenom" required placeholder="Ex: Bob">
                <span class="validity"></span>
                <div id="error-prenom" class="error"></div>
            </label>
        </div>

        {{!-- Label pour le courriel --}}
        <div>
            <label for="courriel">
                <p>
                    <span>Courriel:</span>
                    <span></span>
                </p>
                <input type="email" id="input-email" required
                    pattern="[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)" placeholder="Ex: test@test.com">
                <span class="validity"></span>
                <div id="error-courriel" class="error"></div>
            </label>
        </div>

        {{!-- Label pour le mot de passe --}}
        <div>
            <label for="password">
                <p>
                    <span>Mot de passe:</span>
                    <span> </span>
                    <span>Minimum huit(8) caractères, au moins une lettre majuscule,</span>
                    <span>une lettre minuscule, un chiffre et un caractère spécial</span>
                </p>
                <input type="password" id="input-mot-de-passe" required
                    pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$" placeholder="Ex: laCite2022!">
                <span class="validity"></span>
                <div id="error-password" class="error"></div>
            </label>
        </div>

        {{!-- Fake boutton de Forget Password --}}
        <div>
            <p class="forgetPassword">
                Forget password
            </p>
        </div>

        {{!-- Sumbit button --}}
        <input type="submit" value="{{titre}}">
    </div>
</form>