<h2>{{titre}}</h2>

<form id="form-auth" novalidate>
    <div class="form-group center">
        {{!-- Label pour le courriel --}}
         <div>
            <label for="courriel">
                <p>
                    <span>Courriel:</span>
                    <span></span>
                </p>
                <input type="email" id="input-email" required
                    pattern="[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)" placeholder="Ex: test@test.com">
                <span class="validity"></span>
                <div id="error-courriel" class="error"></div>
            </label>
        </div>

        {{!-- Label pour le mot de passe --}}
       <div>
            <label for="password">
                <p>
                    <span>Mot de passe:</span>
                </p>
                <input type="password" id="input-mot-de-passe" required
                    pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$" placeholder="Ex: laCite2022!">
                <span class="validity"></span>
                <div id="error-password" class="error"></div>
            </label>
        </div>

        {{!-- Fake boutton de Forget Password --}}
        <div>
            <p class="forgetPassword">
                Forget password
            </p>
        </div>

        {{!-- Sumbit button --}}
        <input type="submit" value="{{titre}}">
    </div>
</form>