<h2>{{titre}}</h2>

<form id="form-auth" novalidate>
    <div class="form-group center">
        <div>
            <label>
                <p>Courriel:</p>
                <input type="email" id="input-email">
            </label>
        </div>
        <div>
            <label>
                <p>Mot de passe:</p>
                <input type="password" id="input-mot-de-passe">
            </label>
        </div>
        <div>
            <p class="forgetPassword">
                Forget password
            </p>
        </div>
        <input type="submit" value="{{titre}}">
    </div>
</form>